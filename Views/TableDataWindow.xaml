<Window x:Class="SimpleSQLEditor.Views.TableDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleSQLEditor.Views"
        mc:Ignorable="d"
        Title="TableDataWindow" Height="500" Width="900">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   FontWeight="Bold"
                   Margin="0,0,0,8">
            <Run Text="{Binding DatabaseName}" />
            <Run Text="." />
            <Run Text="{Binding TableName}" />
        </TextBlock>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding TableData}"
                  AutoGenerateColumns="True"
                  IsReadOnly="True" />
    </Grid>
</Window>
