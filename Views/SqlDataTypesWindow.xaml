<hc:Window
  x:Class="SimpleSQLEditor.Views.SqlDataTypesWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:hc="https://handyorg.github.io/handycontrol"
  xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
  xmlns:local="clr-namespace:SimpleSQLEditor.Views"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="SQL Data Types"
  Width="250"
  Height="675"
  MinWidth="175"
  MinHeight="200"
  MaxWidth="275"
  MaxHeight="675"
  ResizeMode="CanResize"
  Style="{StaticResource WindowWin10}"
  SystemBackdropType="Mica"
  mc:Ignorable="d">

  <Grid Margin="5">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <!--#region Header-->
    <TextBlock
      Grid.Row="0"
      Margin="0,0,0,5"
      FontWeight="Bold"
      Text="Allowed Data Types:"
      TextAlignment="Center" />
    <!--#endregion-->

    <!--#region ListBox showing available Data Types-->
    <ListBox
      Grid.Row="1"
      Background="{DynamicResource DarkMaskBrush}"
      ItemContainerStyle="{StaticResource CustomListBoxItemStyle}"
      ItemsSource="{Binding AllowedDataTypes}"
      ScrollViewer.HorizontalScrollBarVisibility="Auto"
      ScrollViewer.VerticalScrollBarVisibility="Auto"
      SelectedItem="{Binding SelectedDataType, Mode=TwoWay}"
      Style="{StaticResource ListBox.Small}">

      <!--#region Add- & Copyfunction via ContextMenu or Keybinding-->
      <ListBox.ContextMenu>
        <ContextMenu
          BorderThickness="1"
          DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}"
          Style="{StaticResource ContextMenu.Small}">

          <MenuItem Command="{Binding AddToColumnDefinitionCommand}">
            <MenuItem.Header>
              <TextBlock Text="Add to ColumnName" />
            </MenuItem.Header>
            <MenuItem.Icon>
              <icon:PackIconPhosphorIcons Kind="Plus" />
            </MenuItem.Icon>
          </MenuItem>

          <MenuItem Command="{Binding CopyCommand}">
            <MenuItem.Header>
              <TextBlock Text="Copy to Clipboard" />
            </MenuItem.Header>
            <MenuItem.Icon>
              <icon:PackIconPhosphorIcons Kind="Copy" />
            </MenuItem.Icon>
          </MenuItem>
        </ContextMenu>
      </ListBox.ContextMenu>

      <ListBox.InputBindings>
        <KeyBinding
          Key="C"
          Command="{Binding CopyCommand}"
          Modifiers="Control" />
      </ListBox.InputBindings>
      <!--#endregion-->

    </ListBox>
    <!--#endregion-->

  </Grid>
</hc:Window>
