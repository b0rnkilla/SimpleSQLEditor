<Window x:Class="EfPlayground.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EfPlayground"
        mc:Ignorable="d"
        Title="EF Playground" Height="350" Width="950"
        ResizeMode="NoResize">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Status -->
        <GroupBox Header="Status" Margin="0,0,0,8">
            <TextBox Text="{Binding StatusText}" />
        </GroupBox>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Connection -->
            <GroupBox Header="SQL Connection" Margin="0,0,0,8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Connection String"/>

                    <Grid Grid.Row="1" Margin="0,6,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Text="{Binding ConnectionString, UpdateSourceTrigger=PropertyChanged}" />

                        <Button Grid.Column="1"
                                Margin="8,0,0,0"
                                Width="110"
                                Content="⏵ Connect"
                                Command="{Binding ConnectCommand}" />
                    </Grid>
                </Grid>
            </GroupBox>

            <!-- Main Area -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Databases -->
                <GroupBox Header="Database" Margin="0,0,8,0">
                    <StackPanel>
                        <ComboBox IsEditable="True"
                                  ItemsSource="{Binding Databases}"
                                  Text="{Binding SelectedDatabase, UpdateSourceTrigger=PropertyChanged}" />

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,6,0,0">
                            <Button Width="90" Margin="0,0,6,0"
                                    Content="↻ Refresh"
                                    Command="{Binding LoadDatabasesCommand}"
                                    IsEnabled="{Binding IsConnected}" />
                            <Button Width="90" Margin="0,0,6,0"
                                    Content="+ Create"
                                    Command="{Binding CreateDatabaseCommand}"
                                    IsEnabled="{Binding IsConnected}" />
                            <Button Width="90"
                                    Content="− Delete"
                                    Command="{Binding DeleteDatabaseCommand}"
                                    IsEnabled="{Binding IsConnected}" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- Tables -->
                <GroupBox Header="Table" Grid.Column="1" Margin="0,0,8,0">
                    <StackPanel>
                        <ComboBox IsEditable="True"
                                  ItemsSource="{Binding Tables}"
                                  Text="{Binding SelectedTable, UpdateSourceTrigger=PropertyChanged}" />

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,6,0,0">
                            <Button Width="90" Margin="0,0,6,0"
                                    Content="↻ Refresh"
                                    Command="{Binding LoadTablesCommand}"
                                    IsEnabled="{Binding IsConnected}" />
                            <Button Width="90" Margin="0,0,6,0"
                                    Content="+ Create"
                                    Command="{Binding CreateTableCommand}"
                                    IsEnabled="{Binding IsConnected}" />
                            <Button Width="90"
                                    Content="− Delete"
                                    Command="{Binding DeleteTableCommand}"
                                    IsEnabled="{Binding IsConnected}" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- Columns -->
                <GroupBox Header="Column" Grid.Column="2">
                    <StackPanel>
                        <ComboBox IsEditable="True"
                                  ItemsSource="{Binding Columns}"
                                  Text="{Binding SelectedColumn, UpdateSourceTrigger=PropertyChanged}" />

                        <ComboBox ItemsSource="{Binding DataTypes}"
                                  SelectedItem="{Binding SelectedDataType}"
                                  Margin="0,6,0,0"/>

                        <TextBox Margin="0,6,0,0"
                                 Text="{Binding ColumnValue, UpdateSourceTrigger=PropertyChanged}" />

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,6,0,0">
                            <Button Width="90" Margin="0,0,6,0"
                                    Content="↻ Refresh"
                                    Command="{Binding LoadColumnsCommand}"
                                    IsEnabled="{Binding IsConnected}" />
                            <Button Width="90" Margin="0,0,6,0"
                                    Content="+ Create"
                                    Command="{Binding CreateColumnCommand}"
                                    IsEnabled="{Binding IsConnected}" />
                            <Button Width="90"
                                    Content="− Delete"
                                    Command="{Binding DeleteColumnCommand}"
                                    IsEnabled="{Binding IsConnected}" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </Grid>
        </Grid>
    </Grid>
</Window>
